<Window x:Class="MineSweeper.InsertNameWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        Title="Record your result!" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Label Content="Enter your name:" HorizontalAlignment="Center" Height="28" Margin="47,24,218,48" VerticalAlignment="Center" Width="102" RenderTransformOrigin="0.559,1.516"/>
        <Button x:Name="Send_button" Content="Send" HorizontalAlignment="Left" Height="22" Margin="140,57,0,0" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="Player_name" Margin="154,24,19,48" TextWrapping="Wrap" Text="Player #1" BorderThickness="1" BorderBrush="Blue" Background="White" Foreground="Black" TextAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
